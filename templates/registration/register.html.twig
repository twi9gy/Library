{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xl-6 col-lg-6 col-md-7 col-sm-12 col-12 card mt-5 mb-5 ml-auto mr-auto">
                <h1 class="h3 mb-3 font-weight-normal text-center mt-3">Регистрация</h1>

                {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.username) }}
                {{ form_row(registrationForm.plainPassword) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.agreeTerms) }}

                <button type="submit" class="btn btn-primary mb-3">Регистрация</button>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}
